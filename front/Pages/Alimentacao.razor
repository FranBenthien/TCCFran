@page "/formulario/alimentacao"

@using Services;
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage

@inject UserService service
@inject NavigationManager nav
@inject ProtectedSessionStorage storage

<form>
       <div class="form-group">
        <label for="exampleFormControlSelect1">Tipo de Estabelecimento</label>
        <select class="form-control" id="placename">
            <option>Selecione uma opção</option>
            <option>Restaurante</option>
            <option>Lanchonete</option>
            <option>Panificadora/Padaria</option>
            <option>Bar</option>
            <option>Comida de rua</option>
            <option>Feira</option>
            <option>Outros</option>
    </select>
  </div>
  <div class="form-group">
        <label for="exampleFormControlSelect1">Valor Gasto</label>
        <textarea class="form-control" id="amountspent"></textarea>
  </div>
  <div class="form-group">
        <label for="exampleFormControlSelect1">Tipo de comida servida</label>
        <textarea class="form-control" id="typefood"></textarea>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Comentarios</label>
    <textarea class="form-control" id="comments" rows="3"></textarea>
  </div>
</form>