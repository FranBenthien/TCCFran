@page "/formulario"

@using Services;
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage

@inject UserService service
@inject NavigationManager nav
@inject ProtectedSessionStorage storage

<div class="formulario">  

    <div class = "formularioinicio">
    
        <h1>Por favor, preencha o formulario abaixo com o maior número de informações possível. Nos campos 
            "Conte sua experiência" você pode fazer um relato livre sobre cada tema.</h1>
    
        <p>
            <label>Cidade Visitada</label>
            <input type="text" @bind-value="@VisitedCity"/>
        </p>

        <p>
            <label>Data de Chegada</label>
            <input type="date" @bind-value="@ArrivalDate"/>
        </p>

        <p>
            <label>Data de retorno</label>
            <input type="date" @bind-value="@departureDate"/>
        </p>


        <button onclick="@advance">
            Avançar
        </button>

    </div>
    
</div>